@model Employee.Models.Staff
@{
}
<h1>Create Staff Member</h1>

<form asp-controller="Staff" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Depertment"></label>
        <input asp-for="Depertment" type="text" class="form-control"/>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>

</form>
